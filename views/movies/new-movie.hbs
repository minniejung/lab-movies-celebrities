<h2>Add a new movie</h2>

<form method="post" action="/movies/create">
  <label for="title">Title : </label>
  <input type="text" id="title" name="title" value="Test title" />

  <label for="genre">Genre : </label>
  <input type="text" id="genre" name="genre" value="Test genre" />

  <label for="plot">Plot : </label>
  <input type="text" id="plot" name="plot" value="Test plot" />

  <label for="cast">Cast : </label>
    <select id="cast" name="cast" class="input">
    {{#each celebrities}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
    </select>

  <button>SUBMIT</button>
</form>